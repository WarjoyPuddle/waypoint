{
  "buildPresets": [
    {
      "hidden": true,
      "name": "base_verbose",
      "verbose": true
    },
    {
      "condition": {
        "lhs": "${hostSystemName}",
        "rhs": "Linux",
        "type": "equals"
      },
      "hidden": true,
      "name": "base_system_linux"
    },
    {
      "hidden": true,
      "name": "base_build_ninja",
      "nativeToolOptions": [
        "-d",
        "keepdepfile"
      ]
    },
    {
      "configurePreset": "configure_linux_clang",
      "hidden": false,
      "inherits": [
        "base_build_ninja",
        "base_system_linux",
        "base_verbose"
      ],
      "name": "build_linux_clang"
    },
    {
      "configurePreset": "configure_linux_gcc",
      "hidden": false,
      "inherits": [
        "base_build_ninja",
        "base_system_linux",
        "base_verbose"
      ],
      "name": "build_linux_gcc"
    }
  ],
  "configurePresets": [
    {
      "cacheVariables": {
        "PRESET_PROP_COMPILE_WARNING_AS_ERROR": true,
        "PRESET_PROP_CXX_EXTENSIONS": false,
        "PRESET_PROP_EXPORT_COMPILE_COMMANDS": true,
        "PRESET_PROP_LINK_WARNING_AS_ERROR": true
      },
      "hidden": true,
      "name": "base_target_properties"
    },
    {
      "generator": "Ninja Multi-Config",
      "hidden": true,
      "name": "base_generator_ninja"
    },
    {
      "cacheVariables": {
        "PRESET_ELEVATED_COMPILER_WARNINGS": "-Wall -Wextra -Wpedantic"
      },
      "hidden": true,
      "name": "base_compiler_clang"
    },
    {
      "cacheVariables": {
        "PRESET_ELEVATED_COMPILER_WARNINGS": "-Wall -Wextra -Wpedantic"
      },
      "hidden": true,
      "name": "base_compiler_gcc"
    },
    {
      "condition": {
        "lhs": "${hostSystemName}",
        "rhs": "Linux",
        "type": "equals"
      },
      "hidden": true,
      "name": "base_system_linux"
    },
    {
      "binaryDir": "${sourceDir}/../build_linux_clang___",
      "hidden": false,
      "inherits": [
        "base_compiler_clang",
        "base_generator_ninja",
        "base_system_linux",
        "base_target_properties"
      ],
      "name": "configure_linux_clang"
    },
    {
      "binaryDir": "${sourceDir}/../build_linux_gcc___",
      "hidden": false,
      "inherits": [
        "base_compiler_gcc",
        "base_generator_ninja",
        "base_system_linux",
        "base_target_properties"
      ],
      "name": "configure_linux_gcc"
    }
  ],
  "testPresets": [
    {
      "condition": {
        "lhs": "${hostSystemName}",
        "rhs": "Linux",
        "type": "equals"
      },
      "hidden": true,
      "name": "base_test_linux"
    },
    {
      "execution": {
        "noTestsAction": "error",
        "scheduleRandom": true,
        "stopOnFailure": false,
        "timeout": 3600
      },
      "hidden": true,
      "name": "base_test_config",
      "output": {
        "outputOnFailure": true,
        "verbosity": "default"
      }
    },
    {
      "configurePreset": "configure_linux_clang",
      "hidden": false,
      "inherits": [
        "base_test_config",
        "base_test_linux"
      ],
      "name": "test_linux_clang"
    },
    {
      "configurePreset": "configure_linux_gcc",
      "hidden": false,
      "inherits": [
        "base_test_config",
        "base_test_linux"
      ],
      "name": "test_linux_gcc"
    }
  ],
  "version": 10
}
